<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isleepbetter.isleepbetter">

    <application
        android:name=".GlobalVariable"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainFunActivity"
            android:label="@string/title_activity_main_fun"></activity>
        <activity android:name=".DemoNFTActivity" />
        <activity android:name=".NFTMonthHistoryActivity" />
        <activity android:name=".NFTHistoryActivity" />
        <activity
            android:name=".DeviceControlActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".ConnectActivity" />
        <activity android:name=".LogoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".AlarmclockActivity" />
        <activity android:name=".NormalClockActivity" />
        <activity android:name=".NFTActivity" /> <!-- <receiver -->
        <!-- <receiver android:name=".AlarmReceiver"> -->
        <!-- <intent-filter> -->
        <!-- <action android:name="Hello" /> -->
        <!-- </intent-filter> -->
        <!-- </receiver> -->
        <activity
            android:name=".NFTdisplayActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".sleeprecordActivity" />
        <activity android:name=".SleepHistoryActivity" />
        <activity android:name=".SleepDataActivity" />

        <activity android:name=".SleepDiaryActivity" />

        <receiver android:name=".AlarmReceiver" />
        <service
            android:name=".BluetoothLeService"
            android:enabled="true" />

        <service
            android:name=".MonitorService"
            android:enabled="true" />
    </application>

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>